generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  reviews             Review[]
  favoriteDormitories FavoriteDormitory[]

  @@map("users")
}

model Dormitory {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       String?
  address     String?
  phone       String?
  website     String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  images              DormitoryImage[]
  reviews             Review[]
  favoriteDormitories FavoriteDormitory[]

  @@map("dormitories")
}

model DormitoryImage {
  id        String   @id @default(uuid())
  imageUrl  String   @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  dormitoryId String    @map("dormitory_id")
  dormitory   Dormitory @relation(fields: [dormitoryId], references: [id])

  @@map("dormitory_images")
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  dormitoryId String    @map("dormitory_id")
  dormitory   Dormitory @relation(fields: [dormitoryId], references: [id])

  @@map("reviews")
}

model FavoriteDormitory {
  id          String     @id @default(uuid())
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
  dormitory   Dormitory? @relation(fields: [dormitoryId], references: [id])
  dormitoryId String?

  @@map("favorite_dormitories")
}
